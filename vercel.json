
{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/**", "shared/**", "migrations/**"]
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.ts"  <-- NOTE: ici, c'est le chemin vers le fichier source du serveur, pas le fichier compilÃ©
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/$1"
    }
  ],
  "env": {
    "DATABASE_URL": "@database_url",
    "SESSION_SECRET": "@session_secret"
  },
  "outputDirectory": "dist/public",  <-- AJOUTEZ CETTE LIGNE
  "buildCommand": "npm run build",  <-- AJOUTEZ CETTE LIGNE
  "devCommand": "npm run dev"  <-- AJOUTEZ CETTE LIGNE
}
